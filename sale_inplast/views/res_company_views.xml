<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="sale_inplast_res_company_inh_form" model="ir.ui.view">
        <field name="name">sale.inplast.res.company.inh.form</field>
        <field name="model">res.company</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='website']" position="after">
                <field name="pnt_pricelist_day_lock" required="1"/>
                <field name="pnt_update_month_day" required="1"/>
            </xpath>
        </field>
    </record>

</odoo>
